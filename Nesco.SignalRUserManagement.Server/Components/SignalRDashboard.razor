@using Nesco.SignalRUserManagement.Server.Services
@using Nesco.SignalRUserManagement.Core.Models
@using System.Text.Json
@inject ISignalRUserManagementService ManagementService
@inject InMemoryConnectionTracker ConnectionTracker
@implements IDisposable

<style>
    .btn-xs {
        padding: 0.15rem 0.4rem;
        font-size: 0.75rem;
        line-height: 1.2;
        border-radius: 0.2rem;
    }
</style>

<div class="signalr-dashboard">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Connected Users</h5>
                    <div>
                        <button class="btn btn-success btn-sm me-2" @onclick="PingAllUsers" title="Ping all connected users">
                            Ping All
                        </button>
                        <button class="btn btn-primary btn-sm" @onclick="RefreshConnections" disabled="@_isRefreshing">
                            @if (_isRefreshing)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                <span>Refreshing...</span>
                            }
                            else
                            {
                                <span>Refresh</span>
                            }
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (_connectedUsers == null)
                    {
                        <p><em>Loading...</em></p>
                    }
                    else if (!_connectedUsers.Any())
                    {
                        <div class="alert alert-warning">
                            No users currently connected.
                            <br/><small>Start a client, login, and connect to SignalR to see users here.</small>
                        </div>
                    }
                    else
                    {
                        <table class="table table-sm table-hover">
                            <thead>
                            <tr>
                                <th>User</th>
                                <th>Connections</th>
                                <th>Last Connected</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in _connectedUsers)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@(user.Username ?? user.UserId)</strong>
                                            @if (!string.IsNullOrEmpty(user.Email))
                                            {
                                                <br /><small class="text-muted">@user.Email</small>
                                            }
                                            <br /><code class="text-muted" style="font-size: 0.85em;">@user.UserId</code>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@user.Connections.Count</span>
                                    </td>
                                    <td>@user.LastConnect?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => PingUser(user.UserId)" title="Ping this user">
                                            Ping
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger me-1" @onclick="() => LogoutUser(user.UserId)" disabled="@_loggingOutUsers.Contains(user.UserId)" title="Logout this user (all connections)">
                                            @if (_loggingOutUsers.Contains(user.UserId))
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                                <span>Logging out...</span>
                                            }
                                            else
                                            {
                                                <span>Logout</span>
                                            }
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => ToggleConnectionDetails(user.UserId)">
                                            @(_expandedUsers.Contains(user.UserId) ? "Hide" : "Show") Details
                                        </button>
                                    </td>
                                </tr>
                                @if (_expandedUsers.Contains(user.UserId))
                                {
                                    <tr>
                                        <td colspan="4" class="bg-light">
                                            <div class="p-2">
                                                <strong>Connections:</strong>
                                                <table class="table table-sm mt-2">
                                                    <thead>
                                                    <tr>
                                                        <th>Connection ID</th>
                                                        <th>User Agent</th>
                                                        <th>Connected At</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    @foreach (var conn in user.Connections)
                                                    {
                                                        <tr>
                                                            <td><code class="text-primary">@conn.ConnectionId</code></td>
                                                            <td><small>@conn.UserAgent</small></td>
                                                            <td>@conn.ConnectedAt.ToString("HH:mm:ss")</td>
                                                            <td>
                                                                <button class="btn btn-xs btn-outline-primary me-1" @onclick="() => PingConnection(conn.ConnectionId)" title="Ping this specific connection">
                                                                    Ping
                                                                </button>
                                                                <button class="btn btn-xs btn-outline-danger" @onclick="() => LogoutConnection(conn.ConnectionId)" disabled="@_loggingOutConnections.Contains(conn.ConnectionId)" title="Logout this specific connection">
                                                                    @if (_loggingOutConnections.Contains(conn.ConnectionId))
                                                                    {
                                                                        <span class="spinner-border spinner-border-sm"></span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span>Logout</span>
                                                                    }
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                        <div class="alert alert-info">
                            <strong>Summary:</strong> @_connectedUsers.Count users, @_connectedUsers.Sum(u => u.Connections.Count) total connections
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Invoke Method</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Method Name</label>
                            <input type="text" class="form-control" @bind="_methodName" placeholder="Enter method name (e.g., Ping, Echo, GetClientInfo)"/>
                            <div class="form-text">Enter any method name registered on the client</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Target Type</label>
                            <select class="form-select" @bind="_targetType">
                                <option value="All">All Connected Users</option>
                                <option value="User">Single User</option>
                                <option value="Users">Multiple Users</option>
                                <option value="Connection">Single Connection</option>
                            </select>
                        </div>
                    </div>

                    @if (_targetType != "All")
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label">@GetTargetLabel()</label>
                                <input type="text" class="form-control" @bind="_target" placeholder="@GetTargetPlaceholder()"/>
                                <div class="form-text">@GetTargetHelperText()</div>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label">Parameters (JSON)</label>
                            <textarea class="form-control font-monospace" rows="4" @bind="_parameters" placeholder="JSON parameter"></textarea>
                            <div class="form-text">Enter parameters as JSON object, or leave empty for no parameters</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary" @onclick="InvokeMethod" disabled="@_isInvoking">
                                @if (_isInvoking)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Invoking...</span>
                                }
                                else
                                {
                                    <span>Invoke Method</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Invocation Results</h5>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearResults">Clear</button>
                </div>
                <div class="card-body">
                    @if (!_results.Any())
                    {
                        <p class="text-muted">No invocations yet. Use the form above to test method invocation.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var result in _results.OrderByDescending(r => r.Timestamp))
                            {
                                <div class="list-group-item @(result.Success ? "list-group-item-success" : "list-group-item-danger")">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            @(result.Success ? "Success" : "Error") - @result.MethodName -> @result.Target
                                        </h6>
                                        <small>@result.Timestamp.ToString("HH:mm:ss")</small>
                                    </div>
                                    @if (result.IsMultiResponse && result.ClientResponses.Any())
                                    {
                                        <div class="mt-2">
                                            <strong>Responses (@result.ClientResponses.Count):</strong>
                                            <div class="alert alert-info mt-1 py-1 px-2 mb-2">
                                                <small>
                                                    <span class="badge bg-success">@result.ClientResponses.Count(r => r.Success) succeeded</span>
                                                    @if (result.ClientResponses.Any(r => !r.Success))
                                                    {
                                                        <span class="badge bg-danger ms-1">@result.ClientResponses.Count(r => !r.Success) failed</span>
                                                    }
                                                </small>
                                            </div>
                                            <div class="border rounded">
                                                @foreach (var clientResp in result.ClientResponses)
                                                {
                                                    var responseKey = $"{result.Timestamp.Ticks}-{clientResp.ConnectionId}";
                                                    <div class="border-bottom">
                                                        <div class="d-flex align-items-center py-2 px-3 cursor-pointer"
                                                             style="cursor: pointer;"
                                                             @onclick="() => ToggleClientResponse(responseKey)">
                                                            <span class="me-2">@(_expandedResponses.Contains(responseKey) ? "▼" : "▶")</span>
                                                            <span class="badge @(clientResp.Success ? "bg-success" : "bg-danger") me-2">
                                                                @(clientResp.Success ? "OK" : "ERR")
                                                            </span>
                                                            <code class="small">@clientResp.ConnectionId</code>
                                                        </div>
                                                        @if (_expandedResponses.Contains(responseKey))
                                                        {
                                                            <div class="py-2 px-3 bg-light border-top">
                                                                @if (clientResp.Success)
                                                                {
                                                                    <pre class="mb-0 p-2 small" style="background-color: #f8f9fa;"><code>@clientResp.Result</code></pre>
                                                                }
                                                                else
                                                                {
                                                                    <p class="mb-0 text-danger small"><strong>Error:</strong> @clientResp.Error</p>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else if (result.Success)
                                    {
                                        <p class="mb-1"><strong>Result:</strong></p>
                                        <pre class="mb-0 bg-light p-2"><code>@result.Result</code></pre>
                                    }
                                    else
                                    {
                                        <p class="mb-1 text-danger"><strong>Error:</strong> @result.Error</p>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ConnectedUserInfo>? _connectedUsers;
    private HashSet<string> _expandedUsers = new();
    private HashSet<string> _expandedResponses = new();
    private HashSet<string> _loggingOutUsers = new();
    private HashSet<string> _loggingOutConnections = new();

    private string _methodName = "Ping";
    private string _targetType = "All";
    private string _target = "";
    private string _parameters = "";
    private bool _isInvoking = false;
    private bool _isRefreshing = false;

    private List<InvocationResult> _results = new();

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to connection changes
        ConnectionTracker.ConnectionsChanged += OnConnectionsChanged;
        await RefreshConnections();
    }

    private void OnConnectionsChanged(ConnectionChangeEventArgs args)
    {
        // Refresh the connections list when a connection changes
        InvokeAsync(async () =>
        {
            _connectedUsers = await ManagementService.GetConnectedUsersAsync();
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        // Unsubscribe from connection changes to prevent memory leaks
        ConnectionTracker.ConnectionsChanged -= OnConnectionsChanged;
    }

    private async Task RefreshConnections()
    {
        _isRefreshing = true;
        StateHasChanged();

        try
        {
            _connectedUsers = await ManagementService.GetConnectedUsersAsync();
        }
        finally
        {
            _isRefreshing = false;
            StateHasChanged();
        }
    }

    private void ToggleConnectionDetails(string userId)
    {
        if (_expandedUsers.Contains(userId))
            _expandedUsers.Remove(userId);
        else
            _expandedUsers.Add(userId);
    }

    private void ToggleClientResponse(string responseKey)
    {
        if (_expandedResponses.Contains(responseKey))
            _expandedResponses.Remove(responseKey);
        else
            _expandedResponses.Add(responseKey);
    }

    private async Task PingUser(string userId)
    {
        _methodName = "Ping";
        _targetType = "User";
        _target = userId;
        _parameters = "";
        await InvokeMethod();
    }

    private async Task PingAllUsers()
    {
        _methodName = "Ping";
        _targetType = "All";
        _target = "";
        _parameters = "";
        await InvokeMethod();
    }

    private async Task PingConnection(string connectionId)
    {
        _methodName = "Ping";
        _targetType = "Connection";
        _target = connectionId;
        _parameters = "";
        await InvokeMethod();
    }

    private async Task LogoutUser(string userId)
    {
        _loggingOutUsers.Add(userId);
        StateHasChanged();

        try
        {
            _methodName = "Logout";
            _targetType = "User";
            _target = userId;
            _parameters = "";
            await InvokeMethod();
        }
        finally
        {
            _loggingOutUsers.Remove(userId);
            StateHasChanged();
        }
    }

    private async Task LogoutConnection(string connectionId)
    {
        _loggingOutConnections.Add(connectionId);
        StateHasChanged();

        try
        {
            _methodName = "Logout";
            _targetType = "Connection";
            _target = connectionId;
            _parameters = "";
            await InvokeMethod();
        }
        finally
        {
            _loggingOutConnections.Remove(connectionId);
            StateHasChanged();
        }
    }

    private string GetTargetLabel()
    {
        return _targetType switch
        {
            "User" => "User ID",
            "Users" => "User IDs (comma-separated)",
            "Connection" => "Connection ID",
            _ => "Target"
        };
    }

    private string GetTargetPlaceholder()
    {
        return _targetType switch
        {
            "User" => "Enter User ID",
            "Users" => "user1,user2,user3",
            "Connection" => "Enter Connection ID",
            _ => ""
        };
    }

    private string GetTargetHelperText()
    {
        return _targetType switch
        {
            "User" => "Enter the User ID from the table above",
            "Users" => "Enter multiple User IDs separated by commas",
            "Connection" => "Expand a user's connections above and copy a Connection ID",
            _ => ""
        };
    }

    private async Task InvokeMethod()
    {
        if (string.IsNullOrWhiteSpace(_methodName))
        {
            AddResult(false, _methodName, _targetType, null, "Method name is required");
            return;
        }

        if (_targetType != "All" && string.IsNullOrWhiteSpace(_target))
        {
            AddResult(false, _methodName, _targetType, null, "Target is required for the selected target type");
            return;
        }

        _isInvoking = true;
        StateHasChanged();

        try
        {
            // Parse parameters
            object? paramObj = null;
            if (!string.IsNullOrWhiteSpace(_parameters))
            {
                try
                {
                    paramObj = JsonSerializer.Deserialize<JsonElement>(_parameters);
                }
                catch (Exception ex)
                {
                    AddResult(false, _methodName, _targetType, null, $"Invalid JSON parameters: {ex.Message}");
                    return;
                }
            }

            string targetDisplay;

            // Use streaming for All, User, Users targets; single-response for Connection
            switch (_targetType)
            {
                case "All":
                {
                    targetDisplay = "All Users";
                    await InvokeStreamingAsync(
                        ManagementService.InvokeOnAllConnectedStreamingAsync(_methodName, paramObj),
                        _methodName,
                        targetDisplay);
                    break;
                }

                case "User":
                {
                    targetDisplay = $"User {_target}";
                    await InvokeStreamingAsync(
                        ManagementService.InvokeOnUserStreamingAsync(_target, _methodName, paramObj),
                        _methodName,
                        targetDisplay);
                    break;
                }

                case "Users":
                {
                    var userIds = _target.Split(',').Select(id => id.Trim()).Where(id => !string.IsNullOrWhiteSpace(id));
                    targetDisplay = $"Users ({_target})";
                    await InvokeStreamingAsync(
                        ManagementService.InvokeOnUsersStreamingAsync(userIds, _methodName, paramObj),
                        _methodName,
                        targetDisplay);
                    break;
                }

                case "Connection":
                {
                    targetDisplay = $"Connection {_target}";
                    // For single connection, use regular invoke
                    var response = await ManagementService.InvokeOnConnectionAsync(_target, _methodName, paramObj);
                    if (response != null)
                    {
                        if (!string.IsNullOrEmpty(response.ErrorMessage))
                        {
                            AddResult(false, _methodName, targetDisplay, null, response.ErrorMessage);
                        }
                        else
                        {
                            var resultJson = response.JsonData != null
                                ? JsonSerializer.Serialize(response.JsonData, new JsonSerializerOptions { WriteIndented = true })
                                : response.FilePath ?? "(null)";
                            AddResult(true, _methodName, targetDisplay, resultJson, null);
                        }
                    }
                    else
                    {
                        AddResult(false, _methodName, targetDisplay, null, "No response received");
                    }
                    break;
                }

                default:
                    AddResult(false, _methodName, _targetType, null, "Invalid target type");
                    return;
            }

            // Refresh connections after invocation
            await RefreshConnections();
        }
        catch (TimeoutException ex)
        {
            AddResult(false, _methodName, _targetType, null, $"Timeout: {ex.Message}");
        }
        catch (InvalidOperationException ex)
        {
            AddResult(false, _methodName, _targetType, null, ex.Message);
        }
        catch (Exception ex)
        {
            AddResult(false, _methodName, _targetType, null, $"Error: {ex.Message}");
        }
        finally
        {
            _isInvoking = false;
            StateHasChanged();
        }
    }

    private async Task InvokeStreamingAsync(IAsyncEnumerable<ClientResponse> responses, string methodName, string targetDisplay)
    {
        // Create a result entry that will be updated as responses arrive
        var invocationResult = new InvocationResult
        {
            Timestamp = DateTime.Now,
            Success = true,
            MethodName = methodName,
            Target = targetDisplay,
            IsMultiResponse = true,
            ClientResponses = new List<ClientResponseResult>()
        };
        _results.Add(invocationResult);
        StateHasChanged();

        await foreach (var response in responses)
        {
            string? resultJson = null;
            if (response.Response?.JsonData != null)
            {
                resultJson = JsonSerializer.Serialize(response.Response.JsonData, new JsonSerializerOptions { WriteIndented = true });
            }
            else if (!string.IsNullOrEmpty(response.Response?.FilePath))
            {
                resultJson = response.Response.FilePath;
            }

            var clientResult = new ClientResponseResult
            {
                ConnectionId = response.ConnectionId,
                Success = response.Success,
                Result = resultJson,
                Error = response.ErrorMessage ?? response.Response?.ErrorMessage
            };

            invocationResult.ClientResponses.Add(clientResult);

            // Update overall success status
            if (!response.Success)
            {
                invocationResult.Success = invocationResult.ClientResponses.Any(r => r.Success);
            }

            // Update UI immediately
            await InvokeAsync(StateHasChanged);
        }
    }

    private void AddResult(bool success, string methodName, string target, string? result, string? error)
    {
        _results.Add(new InvocationResult
        {
            Timestamp = DateTime.Now,
            Success = success,
            MethodName = methodName,
            Target = target,
            Result = result,
            Error = error,
            IsMultiResponse = false
        });
    }

    private void ClearResults()
    {
        _results.Clear();
    }

    private class InvocationResult
    {
        public DateTime Timestamp { get; set; }
        public bool Success { get; set; }
        public string MethodName { get; set; } = "";
        public string Target { get; set; } = "";
        public string? Result { get; set; }
        public string? Error { get; set; }
        public bool IsMultiResponse { get; set; }
        public List<ClientResponseResult> ClientResponses { get; set; } = new();
    }

    private class ClientResponseResult
    {
        public string ConnectionId { get; set; } = "";
        public bool Success { get; set; }
        public string? Result { get; set; }
        public string? Error { get; set; }
    }
}
