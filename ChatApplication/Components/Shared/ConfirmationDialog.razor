@if (IsVisible)
{
    <div class="dialog-overlay" @onclick="OnBackdropClick">
        <div class="dialog-container" @onclick:stopPropagation="true">
            <div class="dialog-header">
                <strong>@Title</strong>
            </div>
            <div class="dialog-body">
                <p>@Message</p>
            </div>
            <div class="dialog-footer">
                <button class="dialog-btn dialog-btn-cancel" @onclick="OnCancel" disabled="@IsProcessing">
                    @CancelText
                </button>
                <button class="dialog-btn dialog-btn-confirm" @onclick="OnConfirm" disabled="@IsProcessing">
                    @if (IsProcessing)
                    {
                        <span>...</span>
                    }
                    @ConfirmText
                </button>
            </div>
        </div>
    </div>
}

<style>
    .dialog-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .dialog-container {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        min-width: 280px;
        max-width: 350px;
        margin: 1rem;
    }

    .dialog-header {
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
        font-size: 1.1rem;
        color: #333;
    }

    .dialog-body {
        padding: 1rem;
    }

    .dialog-body p {
        margin: 0;
        color: #666;
        line-height: 1.5;
    }

    .dialog-footer {
        padding: 1rem;
        border-top: 1px solid #dee2e6;
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }

    .dialog-btn {
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        border: none;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .dialog-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .dialog-btn-cancel {
        background-color: #f0f0f0;
        color: #333;
    }

    .dialog-btn-confirm {
        background-color: #25D366;
        color: white;
    }
</style>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "Confirm";
    [Parameter] public string Message { get; set; } = "Are you sure?";
    [Parameter] public string ConfirmText { get; set; } = "Yes";
    [Parameter] public string CancelText { get; set; } = "No";
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public EventCallback OnConfirmClicked { get; set; }
    [Parameter] public EventCallback OnCancelClicked { get; set; }

    private async Task OnConfirm()
    {
        await OnConfirmClicked.InvokeAsync();
    }

    private async Task OnCancel()
    {
        await OnCancelClicked.InvokeAsync();
    }

    private async Task OnBackdropClick()
    {
        if (!IsProcessing)
        {
            await OnCancelClicked.InvokeAsync();
        }
    }
}
