@page "/chat/{ConversationId}"
@inject AuthService AuthService
@inject ChatService ChatService
@inject NavigationManager Navigation
@inject UserConnectionClient ConnectionClient
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Chat</PageTitle>

<div class="d-flex flex-column vh-100" style="max-width: 600px; margin: 0 auto;">
    <!-- Header -->
    <div class="bg-success text-white p-3 d-flex align-items-center">
        <button class="btn btn-link text-white p-0 me-3" @onclick="GoBack">
            <strong>&larr;</strong>
        </button>
        <div class="flex-grow-1">
            <h6 class="mb-0">@(_otherUser?.DisplayNameOrEmail ?? "Loading...")</h6>
            <small>
                @if (_isTyping)
                {
                    <span class="text-warning">typing...</span>
                }
                else if (_otherUser?.IsOnline == true)
                {
                    <span>Online</span>
                }
                else if (_otherUser?.LastSeen.HasValue == true)
                {
                    <span>Last seen @FormatLastSeen(_otherUser.LastSeen.Value)</span>
                }
            </small>
        </div>
    </div>

    <!-- Messages -->
    <div class="flex-grow-1 overflow-auto p-3 messages-container">
        @if (_isLoading)
        {
            <div class="text-center p-4">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading messages...</p>
            </div>
        }
        else if (!_messages.Any())
        {
            <div class="text-center p-4">
                <p class="text-muted">No messages yet. Say hello!</p>
            </div>
        }
        else
        {
            @foreach (var message in _messages)
            {
                <ChatBubble Message="message" />
            }
        }
    </div>

    <!-- Input -->
    <div class="bg-white border-top p-2">
        <ChatInput OnSend="SendMessage"
                   OnTypingStarted="StartTyping"
                   OnTypingStopped="StopTyping"
                   IsDisabled="@(!ConnectionClient.IsConnected)" />
    </div>
</div>

@code {
    [Parameter]
    public string ConversationId { get; set; } = string.Empty;

    private List<ChatMessageDto> _messages = new();
    private UserDto? _otherUser;
    private bool _isLoading = true;
    private bool _isTyping;
    private Timer? _typingTimer;

    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await AuthService.CheckAuthAsync();
        if (!isAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        ChatService.OnMessageReceived += OnMessageReceived;
        ChatService.OnMessageDelivered += OnMessageDelivered;
        ChatService.OnMessagesRead += OnMessagesRead;
        ChatService.OnUserTyping += OnUserTyping;
        ChatService.OnUserStatusChanged += OnUserStatusChanged;

        await LoadMessages();
        await MarkAsRead();
    }

    private async Task LoadMessages()
    {
        try
        {
            _messages = await ChatService.GetMessagesAsync(ConversationId);

            // Get conversation to find other user
            var conversations = await ChatService.GetConversationsAsync();
            var conversation = conversations.FirstOrDefault(c => c.Id == ConversationId);
            _otherUser = conversation?.OtherUser;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Chat] Error loading messages: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await Task.Delay(50); // Small delay to ensure DOM is updated
            await JSRuntime.InvokeVoidAsync("eval", "document.querySelector('.messages-container')?.scrollTo(0, document.querySelector('.messages-container')?.scrollHeight)");
        }
        catch
        {
            // Ignore scroll errors
        }
    }

    private async Task MarkAsRead()
    {
        await ChatService.MarkAsReadAsync(ConversationId);
    }

    private async Task SendMessage(string text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return;

        var otherUserId = _otherUser?.Id;
        if (string.IsNullOrEmpty(otherUserId))
            return;

        var response = await ChatService.SendMessageAsync(otherUserId, text);
        if (response != null)
        {
            // Add message to local list immediately
            _messages.Add(new ChatMessageDto(
                response.MessageId,
                AuthService.UserId!,
                otherUserId,
                ConversationId,
                text,
                response.SentAt,
                null,
                null,
                MessageStatus.Sent,
                true
            ));
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private async Task StartTyping()
    {
        await ChatService.StartTypingAsync(ConversationId);
    }

    private async Task StopTyping()
    {
        await ChatService.StopTypingAsync(ConversationId);
    }

    private async void OnMessageReceived(NewMessageEvent evt)
    {
        if (evt.ConversationId != ConversationId)
            return;

        _messages.Add(new ChatMessageDto(
            evt.Id,
            evt.SenderId,
            AuthService.UserId!,
            evt.ConversationId,
            evt.Text,
            evt.SentAt,
            DateTime.UtcNow,
            null,
            MessageStatus.Delivered,
            false
        ));

        // Mark as delivered
        await ChatService.MarkAsDeliveredAsync(evt.Id);
        await MarkAsRead();
        await InvokeAsync(async () =>
        {
            StateHasChanged();
            await ScrollToBottom();
        });
    }

    private async void OnMessageDelivered(MessageDeliveredEvent evt)
    {
        if (evt.ConversationId != ConversationId)
            return;

        var message = _messages.FirstOrDefault(m => m.Id == evt.MessageId);
        if (message != null)
        {
            message.Status = MessageStatus.Delivered;
            message.DeliveredAt = evt.DeliveredAt;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async void OnMessagesRead(MessagesReadEvent evt)
    {
        if (evt.ConversationId != ConversationId)
            return;

        foreach (var msg in _messages)
        {
            if (msg.IsMine && msg.Status != MessageStatus.Read)
            {
                msg.Status = MessageStatus.Read;
                msg.ReadAt = evt.ReadAt;
            }
        }
        await InvokeAsync(StateHasChanged);
    }

    private async void OnUserTyping(TypingNotification notification)
    {
        if (notification.ConversationId != ConversationId)
            return;

        _isTyping = notification.IsTyping;
        await InvokeAsync(StateHasChanged);

        // Auto-clear typing indicator after 3 seconds
        if (_isTyping)
        {
            _typingTimer?.Dispose();
            _typingTimer = new Timer(_ =>
            {
                _isTyping = false;
                InvokeAsync(StateHasChanged);
            }, null, TimeSpan.FromSeconds(3), Timeout.InfiniteTimeSpan);
        }
    }

    private async void OnUserStatusChanged(UserStatusEvent evt)
    {
        if (_otherUser?.Id != evt.UserId)
            return;

        _otherUser.IsOnline = evt.IsOnline;
        _otherUser.LastSeen = evt.LastSeen;
        await InvokeAsync(StateHasChanged);
    }

    private string FormatLastSeen(DateTime lastSeen)
    {
        var local = lastSeen.ToLocalTime();
        var now = DateTime.Now;
        var diff = now - local;

        if (diff.TotalMinutes < 1)
            return "just now";
        if (diff.TotalMinutes < 60)
            return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24)
            return $"{(int)diff.TotalHours}h ago";
        if (local.Date == now.Date.AddDays(-1))
            return "yesterday";

        return local.ToString("dd/MM HH:mm");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        _typingTimer?.Dispose();
        ChatService.OnMessageReceived -= OnMessageReceived;
        ChatService.OnMessageDelivered -= OnMessageDelivered;
        ChatService.OnMessagesRead -= OnMessagesRead;
        ChatService.OnUserTyping -= OnUserTyping;
        ChatService.OnUserStatusChanged -= OnUserStatusChanged;
    }
}
